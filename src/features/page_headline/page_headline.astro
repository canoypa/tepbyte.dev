---
import { css } from "~pandacss/css";
import { flex } from "~pandacss/patterns";

const styles = {
  root: flex({ direction: "column", rowGap: 24 }),
  title: css({
    textStyle: "display-large",
    fontFamily: "comfortaa",
    fontWeight: "bold",
  }),
  subhead: css({ textStyle: "title-large", fontFamily: "comfortaa" }),
};

type Props = {
  title: string;
  subhead?: string;
};

const { title, subhead } = Astro.props;
---

<div class:list={styles.root}>
  <h1 class:list={styles.title}>{title}</h1>
  {subhead && <p class:list={styles.subhead}>{subhead}</p>}
</div>
