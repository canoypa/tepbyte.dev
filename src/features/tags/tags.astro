---
import { flex } from "~pandacss/patterns";
import Tag from "./tag.astro";

const styles = {
  root: flex({ gap: 8, wrap: "wrap" }),
};

type Props = {
  tags: string[];
};

const { tags } = Astro.props;
---

<ul class:list={styles.root}>
  {
    tags.map((label) => (
      <li>
        <Tag>{label}</Tag>
      </li>
    ))
  }
</ul>
