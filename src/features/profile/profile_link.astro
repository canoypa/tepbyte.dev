---
import Chip from "~/components/chip/chip.astro";
import { flex } from "~pandacss/patterns";

const styles = {
  root: flex({ gap: 8 }),
};

type Props = {
  links: { label: string; url: string }[];
};

const { links } = Astro.props;
---

<ul class:list={styles.root}>
  {
    links.map(({ label, url }) => (
      <li>
        <Chip as="a" href={url}>
          {label}
        </Chip>
      </li>
    ))
  }
</ul>
