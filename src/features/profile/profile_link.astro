---
import { Chip } from "~/components/chip";
import { flex } from "~pandacss/patterns";

const styles = {
  root: flex({ gap: 8 }),
};

type Props = {
  links: { label: string; url: string }[];
};

const { links } = Astro.props;
---

<div class:list={styles.root}>
  {
    links.map(({ label, url }) => (
      <Chip key={url} as="a" href={url} label={label} />
    ))
  }
</div>
