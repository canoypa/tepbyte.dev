---
import { getCollection } from "astro:content";
import Breadcrumb from "~/features/breadcrumb.astro";
import PageHeadline from "~/features/page_headline/page_headline.astro";
import PostList from "~/features/post/list.astro";
import Seo from "~/features/seo/seo.astro";
import Application from "~/layouts/application.astro";

const posts = (await getCollection("post")).sort(
  (a, b) => b.data.publishedAt.getTime() - a.data.publishedAt.getTime()
);
---

<Application>
  <Seo slot="head" title="Posts" description="書いたもの" />

  <Breadcrumb list={[{ label: "Home", href: "/" }, { label: "Posts" }]} />
  <PageHeadline title="Posts" subhead="書いたもの" />
  <PostList items={posts} />
</Application>
