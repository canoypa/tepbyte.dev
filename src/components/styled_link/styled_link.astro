---
import type { HTMLAttributes } from "astro/types";
import { css } from "~pandacss/css";

const styles = {
  root: css({
    color: { base: "dark.info", _osLight: "light.info" },
    textDecoration: "underline",
    textDecorationColor: { base: "dark.info/60", _osLight: "light.info/60" },
  }),
};

type Props = HTMLAttributes<"a">;

const { class: className, ...attrs } = Astro.props;
---

<a {...attrs} class:list={[className, styles.root]}>
  <slot />
</a>
